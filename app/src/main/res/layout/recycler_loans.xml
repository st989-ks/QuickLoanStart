<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_loan_all"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/text_padding"
    android:minHeight="@dimen/margin_height">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/loans_status_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/text_padding"
            android:paddingStart="@dimen/text_padding"
            android:paddingTop="@dimen/text_padding"
            android:text="@string/loan_status"
            android:textAllCaps="true"
            android:textSize="@dimen/text_size_big" />

        <TextView
            android:id="@+id/list_of_loans_status_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/text_padding"
            android:paddingStart="@dimen/text_padding"
            android:paddingBottom="@dimen/text_padding"
            android:text="@string/registration_date_amount_period" />

    </LinearLayout>

</androidx.cardview.widget.CardView>